<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>index</title>

    <style>
        .center_index {
        margin: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        }
    </style>

</head>
<body>
    
    {{> header }}
    
    {{#if user }}

        <div class="center_index">
            <input type="text" id="codeInput">
            <button id="createGame">Create game</button>
            <button id="joinGame">Join game</button>
            <div style="color: red" id="errorMessage"></div>

            <script>
                $('#createGame').on('click', function() {
                    window.location.replace('/white?code=' + $('#codeInput').val());
                });
                $('#joinGame').on('click', function() {
                    window.location.replace('/black?code=' + $('#codeInput').val());
                });

                var urlParams = new URLSearchParams(window.location.search);
                if (urlParams.get('error') == 'invalidCode') {
                    $('#errorMessage').text('Invalid invite code');
                }
            </script>

            {{#if message}}
                <h4 class="alert alert-danger mt-4">{{message}}</h4>
            {{/if}}

        </div>          
        
                        
    {{else}}
        <center>
            <h1>Please log in to play</h1>
        </center>
    {{/if}}


</body>
</html>